<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Saltkin &dash; Responsive Admin &amp; Dashboard UI Template</title>
    <!-- Fonts -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800,400italic%7cMontserrat:400,700" rel="stylesheet" type="text/css">
    <!-- Icons -->
    <link href="~/Content/typicons.min.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Template -->
    <link href="~/Content/main.min.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="js/plugins/shiv.min.js"></script>
      <script src="js/plugins/respond.min.js"></script>
      <script src="js/plugins/excanvas.min.js"></script>
    <![endif]-->
</head>
<body class="login-page">

    <!-- Page container -->
    <div class="container">
        <p class="text-center">
            <img src="~/img/logo.png" alt="Logo"><br><br>
            @if (ViewBag.Mesaj == null)
            {
                <span>Admin arayüzüne hoşgeldiniz, lütfen aşağıdan giriş yapınız:</span>
            }
            else
            {
                @ViewBag.Mesaj
            }
        </p>
        <div class="login-buttons">
            <button class="btn btn-login" data-toggle="modal" data-target="#loginModal">Giriş Yap</button>
        </div>
    </div>
    <!-- /Page container -->
    <!-- Login modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Lütfen giriş yapınız</h4>
                </div>                
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="email" name="Email" class="form-control" id="email" placeholder="Email adresiniz" required autofocus>
                            </div>
                            <div class="form-group">
                                <input type="password" name="Sifre" class="form-control" id="sifre" placeholder="Şifre" required>
                            </div>
                            <label class="checkbox">
                                <input type="checkbox" value="remember-me"> Beni Hatırla
                            </label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                            @*<button type="submit" class="btn btn-default">Giriş</button>*@
                            <a href="#" onclick="GirisYap();" class="btn btn-default">Giriş</a>
                        </div>
                    }

            </div>
        </div>
    </div>
    <!-- Sign up modal -->
    

    <!-- SCRIPTS -->
    <script src="~/Scripts/plugins/jquery.min.js"></script>
    <script src="~/Scripts/plugins/modernizr.min.js"></script>
    <script src="~/Scripts/plugins/bootstrap.min.js"></script>
    <!-- Site -->
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/Global.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
</body>


@{
    ViewBag.Title = "Kayıt";
    Layout = "~/Views/Shared/_LayoutIcerik.cshtml";
}

<div class="contact">

    <div class="container">
        <h2>Kayıt</h2>
        <div class="contact-form">
            <div class="col-md-8 contact-grid">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <input type="text" name="AdSoyad" id="adSoyad" placeholder="Ad Soyad">
                    <input type="text" name="Email" id="email" placeholder="Email adresiniz">
                    <input type="password" name="Sifre" id="sifre" placeholder="Şifre">
                    <input type="password" name="SifreTekrar" id="sifreTekrar" placeholder="Şifre Tekrar">
                    
                    <div class="send">
                        @*<input type="submit" value="Gönder">*@
                        <br />                       
                        <a href="#" onclick="Kayit();">Tamamla</a>
                    </div>
                }
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
